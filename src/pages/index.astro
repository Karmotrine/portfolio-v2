---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Yuan Ureña">
    <div class="flex flex-col-reverse md:flex-row justify-between py-2 px-4 md:py-4 md:px-8 ">
        <div class="flex flex-col gap-y-4 justify-between">
            <section class="text-xs md:text-sm">
                <h1 class="text-5xl md:text-7xl lg:text-8l font-bold pb-4">Yuan Ureña</h1>
                <p>Web Developer.</p>
                <p>Senior Year Computer Science Student.</p>
                <p>Focused on developing intuitive & reliable web systems.</p>
            </section>
            <section class="text-xs md:text-sm">
                <p>learning in progress:</p>
                <ul class="list-disc list-inside">
                    <li>react</li>
                    <li>angular</li>
                    <li>django</li>
                    <li>nodeJS</li>
                    <li>php/laravel</li>
                    <li>medusaJS</li>
                </ul>
            </section>
            <p>Reach me at: 
                <a 
                    href="mailto:yuanrcurena@gmail.com"
                    class="hover:bg-black hover:text-white transition duration-300"
                >
                    yuanrcurena@gmail.com
                </a>
            </p>
        </div>
        <div class="shrink-0 w-38 h-38 md:w-48 md:h-48 lg:w-96 lg:h-96 " x-data="{ isHover : false }">
            <img
                class="transition-300 object-cover"
                :src="isHover ? '/portrait.webp' : '/portrait-ascii.webp'"
                @mouseenter="isHover = !isHover" 
                @mouseleave="isHover = !isHover"
            />
        </div>
    </div>
</Layout>
