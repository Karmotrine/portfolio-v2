---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/global.css";
import MobileMenuButton from '../components/MobileMenuButton.astro';
import MobileMenu from '../components/MobileMenu.astro';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <link
      rel="preload"
      href="/fonts/IBMPlexSans-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/IBMPlexMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/IBMPlexSerif-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body
    x-data="{ toggleState: false }"
    class="font-plexmono"
  >
    <header
      class="flex pl-4 mx-6 mt-3 border border-black h-12 justify-between items-center md:mx-12 md:mt-6 text-sm"
    >
      <span class="flex h-full items-center"> Yuanurena.</span>
      <nav class="hidden flex-row h-full md:flex">
        <li class="flex border-black border-x px-6 h-full items-center">
          <a href="/about">about</a>
        </li>
        <li class="flex border-black border-r px-6 h-full items-center">
          <a href="/experience">experience</a>
        </li>
        <li class="flex border-black border-r px-6 h-full items-center">
          <a href="/projects">projects</a>
        </li>
      </nav>
      <div
        class="flex bg-black text-white h-full items-center px-4 md:pr-4 md:pl-4"
      >
        <span class="hidden md:block">resume</span>
        <MobileMenuButton
          className="flex md:hidden flex-col h-12 w-12 border-2 border-black rounded justify-center items-center group"
        />
      </div>
    </header>
    <div class="mx-6 border-x border-black min-h-[calc(100vh-8rem)] md:mx-12">
      <main x-show="!toggleState">
        <slot/>
      </main>
      <template x-if="toggleState">
        <MobileMenu className="bg-pattern bg-[length:7px_7px]"/>
      </template >
    </div>
  </body>
  <footer class="bg-black mx-6 mb-3 text-white text-xs md:mx-12 md:mb-6">
    <div
      class="border-x border-b border-black px-2 py-2 flex flex-row justify-between"
    >
      <span>
        <a href="https://github.com/karmotrine" target="_blank">github</a> | <a href="https://www.linkedin.com/in/yururena" target="_blank">linkedin</a>
      </span>
      <span>
        Â© 2021 Yuan Urena
      </span>
    </div>
  </footer>
</html>
